APP_NAME=Relaticle
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

# Security headers (adjust for local HTTP as needed)
# Set SECURITY_HEADERS_ENABLED=false to disable globally
# Set SECURITY_HEADERS_ONLY_HTTPS=false if you need HSTS on HTTP (generally keep true)
SECURITY_HEADERS_ENABLED=true
SECURITY_HEADERS_ONLY_HTTPS=true
SECURITY_HEADERS_REFERRER_POLICY=no-referrer-when-downgrade
SECURITY_HEADERS_HSTS="max-age=31536000; includeSubDomains"
SECURITY_HEADERS_EXPECT_CT="enforce, max-age=30"
SECURITY_HEADERS_PERMISSIONS_POLICY="autoplay=(self), camera=(), encrypted-media=(self), fullscreen=(), geolocation=(self), gyroscope=(), magnetometer=(), microphone=(), midi=(), payment=(), sync-xhr=(self), usb=()"
SECURITY_HEADERS_CONTENT_TYPE_OPTIONS=nosniff

# System Administrator Panel Configuration
# Use either SYSADMIN_DOMAIN for subdomain or SYSADMIN_PATH for path-based access
# SYSADMIN_DOMAIN=sysadmin.example.com
SYSADMIN_PATH=sysadmin

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

GEO_AUTO_TRANSLATE=true
GEO_PHONE_DEFAULT_COUNTRY=us
GEO_CACHE_TTL_MINUTES=10080
GEO_PHONE_ONLY_COUNTRIES_MODE=false
# GEO_PHONE_ONLY_COUNTRIES=us,ca,mx
GEO_PHONE_AUTO_INSERT_DIAL_CODE=false
GEO_PHONE_NATIONAL_MODE=false
GEO_PHONE_SEPARATE_DIAL_CODE=false

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Email Verification (set to true to require email verification)
FORTIFY_EMAIL_VERIFICATION=false

BCRYPT_ROUNDS=12
ZXCVBN_MIN_SCORE=3

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=relaticle
DB_USERNAME=postgres
DB_PASSWORD=postgres

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=redis
CACHE_PREFIX=relaticle_cache

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

MAILCOACH_DOMAIN="relaticle.mailcoach.app"
MAILCOACH_API_TOKEN=""
MAILCOACH_SUBSCRIBERS_LIST_ID=""

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0

FATHOM_ANALYTICS_SITE_ID=

# Community Links
DISCORD_INVITE_URL=https://discord.gg/b9WxzUce4Q

# OCR Configuration
OCR_DRIVER=tesseract
OCR_TESSERACT_PATH=/usr/local/bin/tesseract
OCR_TESSERACT_LANG=eng
OCR_TESSERACT_PSM=3
OCR_TESSERACT_OEM=3
OCR_TESSERACT_TIMEOUT=300

# OCR AI Cleanup (uses Prism PHP)
OCR_AI_ENABLED=true
OCR_AI_PROVIDER=anthropic
OCR_AI_MODEL=claude-3-haiku-20240307
OCR_AI_TEMPERATURE=0.3
OCR_AI_MAX_TOKENS=2000

# OCR Queue
OCR_QUEUE_ENABLED=true
OCR_QUEUE_CONNECTION=database
OCR_QUEUE_NAME=ocr-processing
OCR_QUEUE_TIMEOUT=300
OCR_QUEUE_TRIES=3

# OCR Validation
OCR_MIN_CONFIDENCE=0.7
OCR_MAX_FILE_SIZE=10240
OCR_ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,tiff

# OCR Preprocessing
OCR_PREPROCESSING_ENABLED=true
OCR_RESIZE_MAX_WIDTH=2000
OCR_RESIZE_MAX_HEIGHT=2000
OCR_ENHANCE_CONTRAST=true
OCR_DENOISE=true

# OCR Cache
OCR_CACHE_ENABLED=true
OCR_CACHE_TTL=3600

# OCR Security
OCR_ENCRYPT_STORAGE=false
OCR_REDACT_SENSITIVE=false
OCR_AUDIT_LOGGING=true

# OCR Monitoring
OCR_LOG_PROCESSING_TIMES=true
OCR_ALERT_ON_FAILURES=true
OCR_FAILURE_THRESHOLD=5

# Warden Security Audit Configuration
WARDEN_SCHEDULE_ENABLED=true
WARDEN_SCHEDULE_FREQUENCY=daily
WARDEN_SCHEDULE_TIME=03:00
WARDEN_SCHEDULE_TIMEZONE=UTC

# Notification Channels
WARDEN_EMAIL_RECIPIENTS=security@example.com
WARDEN_EMAIL_FROM=security@relaticle.com
WARDEN_EMAIL_FROM_NAME="Relaticle Security"

# Optional: Slack Integration
# WARDEN_SLACK_WEBHOOK_URL=

# Optional: Discord Integration
# WARDEN_DISCORD_WEBHOOK_URL=

# Optional: Microsoft Teams Integration
# WARDEN_TEAMS_WEBHOOK_URL=

# Cache Configuration
WARDEN_CACHE_ENABLED=true
WARDEN_CACHE_DURATION=3600
WARDEN_CACHE_DRIVER=redis

# Audit Configuration
WARDEN_PARALLEL_EXECUTION=true
WARDEN_AUDIT_TIMEOUT=300
WARDEN_RETRY_ATTEMPTS=3
WARDEN_RETRY_DELAY=1000
WARDEN_SEVERITY_FILTER=medium

# PHP Syntax Audit (optional)
WARDEN_PHP_SYNTAX_AUDIT_ENABLED=false

# Audit History
WARDEN_HISTORY_ENABLED=true
WARDEN_HISTORY_TABLE=warden_audit_history
WARDEN_HISTORY_RETENTION_DAYS=90

# Output Formats
WARDEN_OUTPUT_JSON=false
WARDEN_OUTPUT_JUNIT=false
WARDEN_OUTPUT_MARKDOWN=false

# Unsplash API Configuration
UNSPLASH_ACCESS_KEY=
UNSPLASH_SECRET_KEY=
UNSPLASH_UTM_SOURCE="${APP_NAME}"

# HTTP Client Settings
UNSPLASH_HTTP_TIMEOUT=30
UNSPLASH_HTTP_RETRY_TIMES=3
UNSPLASH_HTTP_RETRY_SLEEP=1000
UNSPLASH_API_BASE_URL=https://api.unsplash.com

# Default Image Settings
UNSPLASH_DEFAULT_PER_PAGE=30
UNSPLASH_DEFAULT_ORIENTATION=
UNSPLASH_DEFAULT_QUALITY=80
UNSPLASH_AUTO_DOWNLOAD=true

# Storage Configuration
UNSPLASH_STORAGE_DISK=public
UNSPLASH_STORAGE_PATH=unsplash

# Database Tables
UNSPLASH_ASSETS_TABLE=unsplash_assets
UNSPLASH_PIVOT_TABLE=unsplashables

# Cache Configuration
UNSPLASH_CACHE_ENABLED=true
UNSPLASH_CACHE_TTL=3600
UNSPLASH_CACHE_PREFIX=unsplash

# Filament Integration
UNSPLASH_FILAMENT_ENABLED=true
UNSPLASH_FILAMENT_MODAL_WIDTH=xl
UNSPLASH_FILAMENT_COLUMNS_GRID=3
UNSPLASH_FILAMENT_SHOW_PHOTOGRAPHER=true
