{
    "mcpServers": {
        "laravel-boost": {
            "command": "php",
            "args": [
                "./artisan",
                "boost:mcp"
            ]
        },
        "fetch": {
            "command": "uvx",
            "args": [
                "mcp-server-fetch"
            ],
            "env": {},
            "disabled": false,
            "autoApprove": [
                "fetch"
            ]
        },
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp"
            ],
            "disabled": false,
            "autoApprove": [
                "resolve-library-id",
                "resolve-library-id"
            ]
        },
        "llms.text": {
            "url": "https://mcp.llmtxt.dev/sse",
            "disabled": false,
            "autoApprove": [
                "git"
            ]
        },
        "memory": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory"
            ],
            "disabled": false,
            "autoApprove": [
                "read_graph"
            ]
        },
        "playwright": {
            "command": "npx",
            "args": [
                "-y",
                "@executeautomation/playwright-mcp-server"
            ],
            "disabled": false,
            "autoApprove": [
                "playwright_navigate"
            ]
        },
        "sequential-thinking": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ],
            "disabled": false,
            "autoApprove": [
                "sequentialthinking"
            ]
        },
        "web-search": {
            "command": "npx",
            "args": [
                "-y",
                "@brave/brave-search-mcp-server",
                "--transport",
                "stdio"
            ],
            "env": {
                "BRAVE_API_KEY": "your-api-key"
            },
            "disabled": false,
            "autoApprove": [
                "brave_web_search"
            ]
        },
        "herd": {
            "command": "php",
            "args": [
                "/Applications/Herd.app/Contents/Resources/herd-mcp.phar"
            ],
            "env": {
                "SITE_PATH": "/Users/manuk/Herd/relaticle"
            }
        }
    }
}
